import pandas as pd
import statsmodels.api as sm
from statsmodels.miscmodels.ordinal_model import OrderedModel

# Example setup
# y = ordered categorical target variable
# X = one independent variable

# Ensure y is properly ordered
df['Economy_state_dummy'] = pd.Categorical(
    df['Economy_state_dummy'],
    categories=['Poor', 'Normal', 'Good'],  # from lowest to highest
    ordered=True
)

# Set up independent variable (for example, 'GDP_log')
X = df[['GDP_log']]
X = sm.add_constant(X)  # optional, add if you want intercept
y = df['Economy_state_dummy']

# Fit Ordered Logit model
model = OrderedModel(endog=y, exog=X, distr='logit')
res = model.fit(method='bfgs', disp=True)

# View results
print(res.summary())
