import pandas as pd
import numpy as np
import statsmodels.api as sm
from statsmodels.miscmodels.ordinal_model import OrderedModel
from scipy.stats import chi2

def test_proportional_odds_assumption(df, dependent_var='Economy_state_dummy', date_var='Date'):
    # Drop Date column if present
    df = df.drop(columns=[date_var], errors='ignore')
    
    # Ensure dependent variable is ordered categorical
    df[dependent_var] = pd.Categorical(df[dependent_var], ordered=True)

    results = []

    predictors = [col for col in df.columns if col != dependent_var]

    for var in predictors:
        try:
            # Drop NA for current variable and dependent variable
            temp_df = df[[dependent_var, var]].dropna()

            # Fit proportional odds model
            model_po = OrderedModel(temp_df[dependent_var], temp_df[[var]],
                                    distr='logit')
            res_po = model_po.fit(method='bfgs', disp=False)

            # Estimate binary logits for each threshold
            thresholds = temp_df[dependent_var].cat.categories
            betas = []
            for i in range(len(thresholds)-1):
                y_binary = (temp_df[dependent_var].cat.codes <= i).astype(int)
                logit_model = sm.Logit(y_binary, sm.add_constant(temp_df[[var]])).fit(disp=False)
                beta = logit_model.params[var]
                betas.append(beta)

            # Calculate beta range across thresholds
            beta_diff = max(betas) - min(betas)

            # Likelihood Ratio Test
            ll_po = res_po.llf
            ll_unconstrained = sum(
                sm.Logit((temp_df[dependent_var].cat.codes <= i).astype(int),
                         sm.add_constant(temp_df[[var]])).fit(disp=False).llf
                for i in range(len(thresholds) - 1)
            )
            lr_stat = 2 * (ll_unconstrained - ll_po)
            df_diff = len(thresholds) - 2
            p_value = chi2.sf(lr_stat, df_diff)

            # Inference
            inference = 'Assumption Holds' if p_value > 0.05 else 'Vi
